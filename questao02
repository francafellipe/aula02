/* Atividade 02
Crie um programa que solicite ao usuário seu peso (em kg) e altura
(em metros) e calcule o IMC. Em seguida, informe a categoria de
acordo com a tabela de IMC (por exemplo, abaixo do peso, peso
normal, sobrepeso, etc.).*/

var pesoUsuario= prompt(`Qual o seu peso !`)
pesoUsuario = parseFloat(pesoUsuario)

var alturaUsuario = prompt (`Qual a sua altura ?`)
alturaUsuario = parseFloat(alturaUsuario)

var imc = pesoUsuario / (alturaUsuario * alturaUsuario)


if (imc <= 18,5) {
    document.write(`Você tem o imc de ${imc} = Abaixo do Peso `)
}
else if (imc >= 18.5 && imc <=24.9){
    document.write(`Seu imc é : ${imc} = Peso Normal`)
}
else if (imc >=25 && imc <= 29.9) {
    document.write(`Seu imc é ${imc} = Sobrepeso `)
}
else if (imc >=30 && imc <=34.9){
    document.write(`Seu imc é ${imc} = Obesisade`)
}
else if (imc >= 35 && imc <=39.9){
    document.write(`Seu imc é  ${imc} = Obesidade Grau 2`)
}
else if (imc >= 40){
    document.write(`Seu imc é  ${imc} = Obesidade Grau 3 ou Obesidade Mórbida`)
}
